<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <filter>
    <filter-name>Authentication</filter-name>
    <filter-class>filter.Authentication</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Authentication</filter-name>
    <url-pattern>/view/index.jsp</url-pattern>
    <url-pattern>/view/profile.jsp</url-pattern>
    <url-pattern>/view/userCounter.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>LoginProcess</servlet-name>
    <servlet-class>controller.LoginProcess</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SignUpHanlding</servlet-name>
    <servlet-class>controller.SignUpHanlding</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Profile</servlet-name>
    <servlet-class>controller.Profile</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserCount</servlet-name>
    <servlet-class>controller.UserCount</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>WelcomePageServlet</servlet-name>
    <servlet-class>controller.WelcomePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginProcess</servlet-name>
    <url-pattern>/LoginProcess</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUpHanlding</servlet-name>
    <url-pattern>/SignUpHanlding</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Profile</servlet-name>
    <url-pattern>/Profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserCount</servlet-name>
    <url-pattern>/UserCount</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WelcomePageServlet</servlet-name>
    <url-pattern>/WelcomePageServlet</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
      30
    </session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>/view/Login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
